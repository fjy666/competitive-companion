{
  "name": "competitive-companion",
  "productName": "Competitive Companion",
  "version": "2.34.1",
  "description": "Parses competitive programming problems and sends them to various tools like CHelper and Hightail.",
  "repository": "https://github.com/jmerle/competitive-companion",
  "author": "Jasper van Merle",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "yarn build:dev --watch",
    "package": "yarn build && web-ext build -s build/ -a dist/ -o",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:package",
    "lint:eslint": "eslint --format codeframe 'src/**' 'tests/**' 'scripts/**' webpack.config.ts",
    "lint:prettier": "prettier --check --ignore-path .gitignore '**/*.{ts,js,html,yml,json}'",
    "lint:package": "yarn build && web-ext lint -s build/ -o text",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "prettier --write --ignore-path .gitignore '**/*.{ts,js,html,yml,json}'",
    "test": "jest",
    "test:no-headless": "cross-env HEADLESS=false jest",
    "test:coverage": "jest --coverage",
    "start:firefox": "web-ext run -s build/ --start-url https://codeforces.com/problemset/problem/954/G --pref devtools.browserconsole.filter.jswarn=false --pref devtools.webconsole.filter.warn=false",
    "start:chrome": "node scripts/chrome-launch",
    "dev:firefox": "yarn build:dev && concurrently 'yarn start:firefox' 'yarn watch' -n web-ext,webpack -c blue,yellow --kill-others",
    "dev:chrome": "yarn build:dev && concurrently 'yarn start:chrome' 'yarn watch' -n chrome,webpack -c blue,yellow --kill-others"
  },
  "dependencies": {
    "cyrillic-to-translit-js": "3.2.1",
    "nanobar": "0.4.2",
    "pdfjs-dist": "2.14.305",
    "snarkdown": "2.0.0",
    "webextension-polyfill-ts": "0.26.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^18.0.0",
    "@types/terser-webpack-plugin": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "chrome-launch": "^1.1.4",
    "concurrently": "^7.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-import": "^2.26.0",
    "expect-playwright": "^0.8.0",
    "husky": "4.3.8",
    "jest": "^27.5.1",
    "jest-playwright-preset": "^1.7.2",
    "jsdom": "^19.0.0",
    "lint-staged": "^13.0.1",
    "playwright": "^1.20.2",
    "prettier": "^2.7.0",
    "string-replace-loader": "^3.1.0",
    "terser-webpack-plugin": "^5.3.3",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "web-ext": "^7.0.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "worker-loader": "^3.0.8"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "node": true
    },
    "ignorePatterns": [
      "*.html"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-member-accessibility": "error",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "default",
          "format": [
            "camelCase"
          ]
        },
        {
          "selector": "variable",
          "format": [
            "camelCase",
            "UPPER_CASE"
          ]
        },
        {
          "selector": [
            "typeLike",
            "enumMember"
          ],
          "format": [
            "PascalCase"
          ]
        }
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ],
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ]
    }
  },
  "jest": {
    "preset": "jest-playwright-preset",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --concurrent false"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --format codeframe --fix"
    ],
    "*.{ts,js,html,yml,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "arrowParens": "avoid"
  }
}
